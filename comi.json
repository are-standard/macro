  "api_endpoints": {
    "description": "Suggested API endpoints for consuming applications",
    "endpoints": [
      {
        "path": "/operations",
        "method": "GET",
        "description": "List all available operations"
      },
      {
        "path": "/operations/{category}",
        "method": "GET", 
        "description": "Get operations by category"
      },
      {
        "path": "/devices",
        "method": "GET",
        "description": "List all available devices"
      },
      {
        "path": "/devices/{category}",
        "method": "GET",
        "description": "Get devices by category"
      },
      {
        "path": "/crops",
        "method": "GET",
        "description": "List all available crops"
      },
      {
        "path": "/crops/{category}",
        "method": "GET",
        "description": "Get crops by category"
      },
      {
        "path": "/compatibility/check",
        "method": "POST",
        "description": "Validate device-crop-operation compatibility",
        "body": {
          "devices": ["device_uuid1", "device_uuid2"],
          "crop": "crop_id",
          "operation": "operation_id",
          "growth_stage": "stage_id",
          "environmental_conditions": {}
        }
      },
      {
        "path": "/planning/suggest",
        "method": "POST",
        "description": "Suggest compatible device combinations",
        "body": {
          "crop": "crop_id",
          "operation": "operation_id",
          "constraints": {}
        }
      },
      {
        "path": "/workflows",
        "method": "GET",
        "description": "List available operation workflows"
      },
      {
        "path": "/workflows/{workflow_id}/validate",
        "method": "POST",
        "description": "Validate workflow sequence and timing",
        "body": {
          "field_id": "field_id",
          "planned_start_date": "date",
          "environmental_conditions": {}
        }
      },
      {
        "path": "/fields/{field_id}/context",
        "method": "GET",
        "description": "Get current field state and context"
      },
      {
        "path": "/fields/{field_id}/operations/plan",
        "method": "POST",
        "description": "Plan operations for a field",
        "body": {
          "workflow_id": "workflow_id",
          "constraints": {},
          "preferences": {}
        }
      },
      {
        "path": "/equipment_chains/{chain_id}/simulate",
        "method": "POST",
        "description": "Simulate multi-machine operation efficiency",
        "body": {
          "field_conditions": {},
          "equipment_assignments": {},
          "performance_targets": {}
        }
      },
      {
        "path": "/attachments/compatibility/check",
        "method": "POST",
        "description": "Check attachment compatibility between devices",
        "body": {
          "tractor_id": "device_uuid",
          "implement_id": "device_uuid",
          "attachment_point": "string",
          "operation_type": "string"
        }
      },
      {
        "path": "/attachments/power/analyze",
        "method": "POST",
        "description": "Analyze power requirements and efficiency",
        "body": {
          "tractor_id": "device_uuid",
          "implement_id": "device_uuid",
          "field_conditions": {},
          "target_speed": "number"
        }
      },
      {
        "path": "/attachments/stability/calculate",
        "method": "POST",
        "description": "Calculate stability factors and ballast requirements",
        "body": {
          "tractor_id": "device_uuid",
          "implement_id": "device_uuid",
          "load_conditions": {}
        }
      },
      {
        "path": "/front_loader/tools",
        "method": "GET",
        "description": "List available front loader tools and compatibility"
      }
    ]
  },
